<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- App Theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/colorWindowBackground</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <!-- WelcomeActivity Theme -->
    <style name="AppTheme.Welcome">
        <item name="android:windowBackground">@drawable/app_cover</item>
    </style>

    <style name="BottomDialogTransition">
        <item name="android:windowEnterAnimation">@anim/dialog_bottom_slide_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_bottom_slide_out</item>
    </style>

    <style name="BottomDialogTransition.NoEnterAnim">
        <item name="android:windowEnterAnimation">@null</item>
    </style>
    <style name="EqualizerTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/snow_ui_colorPrimary</item>
        <item name="colorPrimaryDark">@color/snow_ui_colorPrimaryDark</item>
        <item name="colorAccent">@color/snow_ui_colorAccent</item>
        <item name="android:windowBackground">@color/snow_ui_windowBackground</item>
        <item name="android:textColor">@color/snow_ui_textColor</item>
    </style>

    <style name="crollerStyle">
        <item name="back_circle_color">@color/snow_ui_croller_back_circle_color</item>
        <item name="back_circle_disable_color">@color/snow_ui_croller_back_circle_disable_color
        </item>
        <item name="indicator_color">@color/snow_ui_croller_indicator_color</item>
        <item name="indicator_disable_color">@color/snow_ui_croller_indicator_disable_color</item>
        <item name="main_circle_color">@color/snow_ui_croller_main_circle_color</item>
        <item name="main_circle_disable_color">@color/snow_ui_croller_main_circle_disable_color
        </item>
        <item name="progress_primary_color">@color/snow_ui_croller_progress_primary_color</item>
        <item name="progress_primary_disable_color">
            @color/snow_ui_croller_progress_primary_disable_color
        </item>
        <item name="progress_secondary_color">@color/snow_ui_croller_progress_secondary_color</item>
        <item name="progress_secondary_disable_color">
            @color/snow_ui_croller_progress_secondary_disable_color
        </item>
    </style>
</resources>
